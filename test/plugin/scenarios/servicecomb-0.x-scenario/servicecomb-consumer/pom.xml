    <artifactId>servicecomb-consumer</artifactId>

    <name>skywalking-servicecomb-0.x-scenario-consumer</name>


    <dependencies>
        <dependency>
            <groupId>io.servicecomb</groupId>
            <artifactId>provider-pojo</artifactId>
            <version>${test.framework.version}</version>
