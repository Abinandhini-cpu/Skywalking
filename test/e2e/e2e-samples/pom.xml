<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>apache-skywalking-e2e</artifactId>
        <groupId>org.apache.skywalking</groupId>
        <version>6.2.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>e2e-samples</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <version>${spring.boot.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
            <version>${spring.boot.version}</version>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>${h2.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.skywalking</groupId>
            <artifactId>e2e-base</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring.boot.version}</version>
                <configuration>
                    <executable>true</executable>
                    <addResources>true</addResources>
                    <excludeDevtools>true</excludeDevtools>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <configuration>
                    <containerNamePattern>%a</containerNamePattern>
                    <images>
                        <image>
                            <name>kezhenxu94/skywalking-e2e-server:latest</name>
                            <alias>skywalking-e2e-server-${COMMIT_HASH}</alias>
                            <run>
                                <env>
                                    <OAP_LOG_DIR>/tmp/</OAP_LOG_DIR>
                                    <WEBAPP_LOG_DIR>/tmp/</WEBAPP_LOG_DIR>
                                </env>
                                <ports>
                                    <port>+webapp.host:webapp.port:8080</port>
                                </ports>
                                <volumes>
                                    <bind>
                                        <volume>
                                            ${project.basedir}/../../../dist/apache-skywalking-apm-bin:/skywalking
                                        </volume>
                                    </bind>
                                </volumes>
                                <wait>
                                    <http>
                                        <url>http://${docker.host.address}:${webapp.port}</url>
                                        <method>GET</method>
                                        <status>200..399</status>
                                    </http>
                                    <time>120000</time>
                                </wait>
                            </run>
                        </image>
                        <image>
                            <name>kezhenxu94/skywalking-e2e-client:latest</name>
                            <alias>skywalking-e2e-client-${COMMIT_HASH}</alias>
                            <run>
                                <dependsOn>
                                    <container>skywalking-e2e-server-${COMMIT_HASH}</container>
                                </dependsOn>
                                <env>
                                    <OAP_HOST>skywalking-e2e-server-${COMMIT_HASH}</OAP_HOST>
                                    <OAP_PORT>11800</OAP_PORT>
                                    <CLIENT_JAR>${project.build.finalName}.jar</CLIENT_JAR>
                                </env>
                                <ports>
                                    <port>client.port:8080</port>
                                </ports>
                                <links>
                                    <link>skywalking-e2e-server-${COMMIT_HASH}</link>
                                </links>
                                <volumes>
                                    <bind>
                                        <volume>/skywalking</volume>
                                        <volume>${project.build.directory}:/home</volume>
                                    </bind>
                                    <from>
                                        <image>skywalking-e2e-server-${COMMIT_HASH}</image>
                                    </from>
                                </volumes>
                                <wait>
                                    <http>
                                        <url>
                                            http://${docker.host.address}:${client.port}/e2e/health-check
                                        </url>
                                        <method>GET</method>
                                        <status>200..399</status>
                                    </http>
                                    <time>240000</time>
                                </wait>
                            </run>
                        </image>
                    </images>
                </configuration>
            </plugin>

            <!-- set the system properties that can be used in IT's -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <sw.webapp.host>
                            ${webapp.host}
                        </sw.webapp.host>
                        <sw.webapp.port>
                            ${webapp.port}
                        </sw.webapp.port>
                    </systemPropertyVariables>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
